<script>
    var file = document.querySelector('.file-input');
    var span = document.querySelector('.file-name');
    file.addEventListener('change', ()=>{
        var actualFile = file.files[0];
        span.innerHTML = actualFile.name;
        var filereader = new FileReader();
        filereader.onload = (event)=>{
            document.querySelector('.filein').value = event.target.result;
        }
        filereader.readAsDataURL(actualFile);
    })
</script>